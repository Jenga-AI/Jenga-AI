# MLflow Configuration
# Tracking server URI (local or remote)
MLFLOW_TRACKING_URI=./mlruns

# Default experiment name
MLFLOW_EXPERIMENT_NAME=jenga-ai-default

# Artifact storage root (local path or cloud storage URI)
# Examples: ./mlruns, s3://my-bucket/mlflow, gs://my-bucket/mlflow
MLFLOW_ARTIFACT_ROOT=./mlruns

# Backend store URI for metadata storage
# Examples: ./mlruns, sqlite:///mlflow.db, postgresql://user:pass@host/db
MLFLOW_BACKEND_STORE_URI=./mlruns

# MLflow UI Server Configuration
MLFLOW_PORT=5000
MLFLOW_HOST=127.0.0.1

# Model Registry (optional)
# MLFLOW_REGISTRY_URI=sqlite:///mlflow_registry.db

# S3 Configuration (if using S3 for artifacts)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# MLFLOW_S3_ENDPOINT_URL=https://s3.amazonaws.com
